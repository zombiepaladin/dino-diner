<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        xmlns:menu ="clr-namespace:DinoDiner.Menu;assembly=Menu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <menu:Order/>
    </Window.DataContext>
    <DockPanel>
        <local:OrderControl x:Name ="OrderList" DockPanel.Dock="Right" Width="200" Background="LightSteelBlue" Margin="0,1,0,-1"></local:OrderControl>
        <Frame Source="MenuCategorySelection.xaml" Name ="OrderInterface"
               LoadCompleted= "OnLoadCompleted"
               DataContextChanged = "OnDataContextChanged"/>

    </DockPanel>
</Window>