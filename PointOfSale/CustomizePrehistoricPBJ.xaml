<Page x:Class="PointOfSale.CustomizePrehistoricPBJ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="PrehistoricPBJCustomizer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="1" Click="HoldPeanutButterClicked">Hold Peanut Butter</Button>
        <Button Grid.Row="1" Grid.Column="2" Click="HoldJellyClicked">Hold Jelly</Button>
        <Button Grid.Row="2" Grid.Column="1" Height="40" Width="100" Click="DoneClicked">Done</Button>
    </Grid>
</Page>
